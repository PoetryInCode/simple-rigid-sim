LINK = -lstdc++ -lSDL2 -lOpenGL -lGLEW -lGLU
DBG = -Wall
CC := clang $(DBG)

targets = Color.o Cube.o main.o Quad.o Vertex.o

all: build ;

Color.o: Color.h
Cube.o: Cube.h
main.o: Quad.h
Quad.o: Color.h Vertex.h
Vertex.o: Vertex.h

build: $(targets) ;
	$(CC) -o ./bin/main $(LINK)

.PHONY: clean
clean: main.o ;
	rm -rf ./bin/*

run: build ;
	./bin/main.o