LINK = -lstdc++ -lSDL2 -lOpenGL -lGLEW -lGLU -I./src/
DBG = -Wall
CC := clang $(DBG)

targets = Color.o Cube.o main.o Quad.o Vertex.o

all: build ;

Color.o: src/Color.h
Cube.o: src/Cube.h
main.o: src/Quad.h src/Color.h
Quad.o: src/Color.h
Vertex.o: src/Vertex.h

build: $(targets) ;
	$(CC) -o ./bin/main $(targets) $(LINK)

.PHONY: clean
clean: main.o ;
	rm -rf ./bin/*

run: build ;
	./bin/main