LINK = -lstdc++ -lSDL2 -lOpenGL -lGLEW -lGLU
DBG = -Wall
CC := clang $(DBG)

all: build ;

Color.o: Color.h
Cube.o: Cube.h
main.o: Quad.h
Quad.o: Color.h Vertex.h
Vertex.o: Vertex.h

build:
	$(CC) ./src/main.cpp -o ./bin/main.o $(LINK)

.PHONY: clean
clean: main.o ;
	rm -rf ./bin/*

run: build ;
	./bin/main.o